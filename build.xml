<?xml version="1.0"?>
<project name="opencraft" default="build" basedir=".">
	<path id="libs">
		<fileset dir="lib" includes="**/*.jar"/>
	</path>
	<path id="classes">
		<fileset dir="bin" includes="**/*.class"/>
	</path>
	<target name="init">
		<mkdir dir="bin"/>
	</target>
	<target name="build" depends="init">
		<javac srcdir="src" classpath="${toString:libs}" destdir="bin" debug="true"/>
	</target>
	<target name="gcj" depends="init">
		<javac srcdir="src" classpath="${toString:libs}" compiler="gcj" destdir="bin" debug="true"/>
	</target>
	<target name="clean">
		<delete dir="bin"/>
	</target>
	<target name="rebuild" depends="clean,build"/>
	<target name="run" depends="build">
		<java classname="org.opencraft.server.Server" fork="true">
			<arg value="-Xms512m"/>
			<arg value="-Xmx1024m"/>
			<classpath>
				<pathelement path="${toString:libs}"/>
				<pathelement path="bin"/>
		   	</classpath>
			<assertions>
				<enable/>
			</assertions>
		</java>
	</target>
	<target name="run-gcj" depends="gcj">
		<java classname="org.opencraft.server.Server" fork="true">
			<arg value="-Xms512m"/>
			<arg value="-Xmx1024m"/>
			<classpath>
				<pathelement path="${toString:libs}"/>
				<pathelement path="bin"/>
		   	</classpath>
			<assertions>
				<enable/>
			</assertions>
		</java>
	</target>
	<target name="release" depends="rebuild">
		<mkdir dir="release"/>
		<jar destfile="release/opencraft.jar" basedir="bin" includes="**/*.class" update="true"/>
		<copy todir="release/data">
			<fileset dir="data">
				<include name="*.xml"/>
				<include name="*.properties"/>
				<include name="savedGames"/>
			</fileset>
		</copy>
		<copy todir="release">
			<fileset dir="lib" includes="*.jar"/>
			<fileset dir="." includes="*.TXT"/>
			<fileset dir="." includes="run-release.bat"/>
		</copy>
		<copy todir="release/doc">
			<fileset dir="doc" includes="**/*.TXT"/>
		</copy>
	</target>
</project>
